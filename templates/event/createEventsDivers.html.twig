{% extends 'base.html.twig' %}

{% block body %}
  <br>
  <br>
  <br>
  <script>
    // add-collection-widget.js
  jQuery(document).ready(function () {
      jQuery('.add-another-collection-widget').click(function (e) {
          var list = jQuery(jQuery(this).attr('data-list-selector'));
          // Try to find the counter of the list or use the length of the list
          var counter = list.data('widget-counter') | list.children().length;

          // grab the prototype template
          var newWidget = list.attr('data-prototype');
          // replace the "__name__" used in the id and name of the prototype
          // with a number that's unique to your emails
          // end name attribute looks like name="contact[emails][2]"
          newWidget = newWidget.replace(/__name__/g, counter);
          // Increase the counter
          counter++;
          // And store it, the length cannot be used if deleting widgets is allowed
          list.data('widget-counter', counter);

          // create a new list element and add it to the list
          var newElem = jQuery(list.attr('data-widget-tags')).html(newWidget);
          newElem.appendTo(list);
      });
  });
  </script>
   
    <container class="container-creer-event">
      <div class="card mb-3 creer-event-layout">

      {{ form_start(formDate) }}
      {{ form_row(formDate.date, { 'attr' : { 'class' : 'form-control' }}) }}
      {{ form_end(formDate) }}
      
      {{ form_start(formEventDiversCreate) }}

      {{ form_row(formEventDiversCreate.titre, { 'attr' : { 'class' : 'form-control' }}) }}

        {{ form_row(formEventDiversCreate.texte, { 'attr' : { 'class' : 'form-control' }}) }}

        
      
        <ul id="image-fields-list"
          data-prototype="{{ form_widget(formEventDiversCreate.images.vars.prototype)|e }}"
          data-widget-tags="{{ '<li></li>'|e }}"
          data-widget-counter="{{ (formEventDiversCreate.children|length)+1 }}">
          {% for imageField in formEventDiversCreate.images %}
          <li>
              {{ form_errors(imageField) }}
              {{ form_widget(imageField,{ 'attr': { 'class': 'file','data-show-preview': 'false'}} ) }}
          </li>
          {% endfor %}
        </ul>

        <button type="button"
          class="add-another-collection-widget"
          data-list-selector="#image-fields-list">Ajouter une image</button>

        <ul id="video-fields-list"
          data-prototype="{{ form_widget(formEventDiversCreate.videos.vars.prototype)|e }}"
          data-widget-tags="{{ '<li></li>'|e }}"
          data-widget-counter="{{ formEventDiversCreate.children|length }}">
          {% for videoField in formEventDiversCreate.videos %}
          <li>
              {{ form_errors(videoField) }}
              {{ form_widget(videoField) }}
          </li>
          {% endfor %}
        </ul>

        <button type="button"
          class="add-another-collection-widget"
          data-list-selector="#video-fields-list">Ajouter une video</button>

        <button type="submit" class="btn btn-success">Enregistrer</button>
        {{ form_row(formEventDiversCreate.images,{ 'label' : false } ) }}<!-- pour eviter l'affichage du libelle images-->  
  
        {{ form_row(formEventDiversCreate.videos,{ 'label' : false } ) }}
        {{ form_end(formEventDiversCreate) }}
        </div>
      </container>
{% endblock %}