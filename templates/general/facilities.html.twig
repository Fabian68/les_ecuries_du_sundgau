{% extends 'base.html.twig' %}
{% block scripts %}

    <style type="text/css">
    html body{
        height: 100%;
        width: 100%;
    }
    </style>

    <script>
    function display(i){
        var image = document.getElementById("displayScreen");   
        var text = document.getElementById("facility-text");
        if(i == 1){
            image.src = "/images/resources/facilities/big_area.jpg";
            text.innerHTML = "Grande piste"
        } else if(i == 2) {
            image.src = "/images/resources/facilities/petite_piste.jpg";
            text.innerHTML = "Petite piste"
        } else if(i == 3) {
            image.src = "/images/resources/facilities/park_2.jpg";
            text.innerHTML = "Parc avec abri pour toute l'ann√©e (2 hectares)"
        } else {
            image.src = "/images/resources/facilities/parking.jpg";
            text.innerHTML = "Parking"
        }
    }
    </script>

{% endblock %}

{% block body %}
    <div class="container-facility">
        <div class="facility">
            <map name="facilities">
                <area shape="poly" coords="40,80,60,80,60,100,40,100"
                    onclick="display(1)" alt="HTML" />
                <area shape="poly" coords="130,70,150,70,150,90,130,90"
                    onclick="display(2)" alt="CSS" />
                <area shape="poly" coords="150,10,170,10,170,30,150,30"
                    onclick="display(3)" alt="JavaScript" />
                <area shape="poly" coords="30,210,50,210,50,230,30,230"
                    onclick="display(4)" alt="JavaScript" />
            </map>
            <div class="map-and-text">  
              <img class="map-layout" usemap="#facilities" src="/images/resources/facilities/map.jpg" alt="map" />
              <h2 id="facility-text" class="text-white facility-image-title">Vue d'ensemble</h2>
            </div>
            <img class="facility-layout" id="displayScreen" src="/images/resources/facilities/vue_d_ensemble.jpg" />
        </div>
        <div class="bg-facility"></div>
    </div>
{% endblock %}