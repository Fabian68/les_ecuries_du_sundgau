{% extends 'base.html.twig' %}

{% block body %}
<br>
<br>
<br>
<br>

    {% if not app.user %}
    <div>Vous devez vous connecter pour modifier votre profil.</div>
{% else %}
    {{ app.user.motDePasse}}
    {{ app.user.oldMotDePasse}}
    {{ app.user.confirm_oldMotDePasse}}
    {{ form_start(form) }}
    {{ form_row(form.confirm_oldMotDePasse,{ 'label' : 'Votre ancien mot de passe'}) }}
    {{ form_row(form.nouveau_motDePasse) }}
    {{ form_row(form.confirm_nouveauMotDePasse,{ 'label' : 'Confirmation du mot de passe'}) }}
    <button type="submit" class="btn btn-success"> Modifier </button>
    {{ form_end(form)}}

{% endif %}
{% endblock %}